<Application x:Class="GUI_WPF_Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI_WPF_Demo">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="MontserratFont">/GUI_WPF_Demo;component/FontFamily/Montserrat-Regular.ttf#Montserrat Regular</FontFamily>

            <Style TargetType="{x:Type TextBox}">
                <Setter Property="FontFamily" Value="{DynamicResource MontserratFont}"/>
            </Style>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="{DynamicResource MontserratFont}"/>
            </Style>

            <Style TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{DynamicResource MontserratFont}"/>
            </Style>

            <Style TargetType="{x:Type Button}">
                <Setter Property="FontFamily" Value="{DynamicResource MontserratFont}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
